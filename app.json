{
  "expo": {
    "name": "PhotoCheck",
    "slug": "photocheck",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "photocheck",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "App de câmera forense profissional para documentação fotográfica em laudos e perícias. Captura fotos com overlay de informações GPS, data/hora e metadados EXIF para uso em documentação técnica e jurídica.",
    "keywords": [
      "camera",
      "forensic",
      "gps",
      "photography",
      "documentation",
      "legal",
      "exif",
      "metadata",
      "pericia",
      "laudos"
    ],
    "privacy": "public",
    "platforms": [
      "ios",
      "android"
    ],
    "githubUrl": "https://github.com/paulosjunior7/photocheck",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "splash": {
        "image": "./assets/images/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#ffffff"
      },
      "bundleIdentifier": "com.paulosjunior7.photocheck",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "splash": {
        "image": "./assets/images/splash-icon.png",
        "resizeMode": "contain",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION"
      ],
      "package": "com.paulosjunior7.photocheck"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location to add GPS coordinates to photos for forensic documentation.",
          "locationAlwaysPermission": "Allow $(PRODUCT_NAME) to use your location to add GPS coordinates to photos for forensic documentation.",
          "locationWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location to add GPS coordinates to photos for forensic documentation.",
          "isIosBackgroundLocationEnabled": false,
          "isAndroidBackgroundLocationEnabled": false,
          "isAndroidForegroundServiceEnabled": false
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to save photos to your gallery for documentation purposes.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save photos to your gallery for documentation purposes.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "a1e8afc1-2266-47b0-a226-6201eb3a3adc"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/a1e8afc1-2266-47b0-a226-6201eb3a3adc"
    }
  }
}
